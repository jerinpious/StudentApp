@model List<StudentApp.Models.Student>

@{
    ViewData["Title"] = "All Students";
}

<h2>All Students</h2>

<a href="@Url.Action("Add", "Student")" class="btn btn-primary mb-3">Add New Student</a>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
            <th>GPA</th>
            <th>GPA Scale</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.Age</td>
                <td>@student.GPA</td>
                <td>@student.GPAScale</td>
                <td>
                    <a href="@Url.Action("Edit", "StudentController", new { id = student.Id })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Delete", "StudentController", new { id = student.Id })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
